/* ===============================
   ROOT & RESET
================================ */
:root {
  /* Aluminium / Silver base */
  --aluminium-light: #e5e7eb;   /* macbook silver base */
  --aluminium-mid: #d1d5db;     /* section separation */
  --aluminium-dark: #9ca3af;    /* borders / dividers */

  /* Dark contrast layers */
  --graphite-dark: #1f2933;     /* cards / nav */
  --graphite-darker: #111827;   /* footer / hero depth */

  /* Text */
  --text-dark: #111827;
  --text-muted: #4b5563;
  --text-light: #f9fafb;

  /* Accent */
  --yellow: #f5c400;
  --yellow-dark: #d6aa00;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Inter, Arial, sans-serif;
  background: linear-gradient(
    180deg,
    #eef0f3 0%,
    #e5e7eb 100%
  );
  color: var(--text-dark);
  line-height: 1.6;
}

/* ===============================
   HEADER / NAVIGATION
================================ */
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(11, 13, 16, 0.92);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255,255,255,0.06);
}

.header-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1.4rem 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand a {
  font-size: 1.8rem;        /* CALIBRATED */
  font-weight: 800;
  color: var(--silver);     /* as requested */
  text-decoration: none;
  letter-spacing: 0.6px;
}

.main-nav {
  display: flex;
  gap: 2.5rem;
}

.main-nav a {
  font-size: 1.05rem;       /* not tiny */
  font-weight: 600;
  color: var(--silver);
  text-decoration: none;
  letter-spacing: 0.3px;
}

.main-nav a:hover {
  color: var(--yellow);
}

@media (max-width: 768px) {
  .main-nav {
    display: none;
  }

  .brand a {
    font-size: 1.6rem;
  }
}


/* ===============================
   HERO
================================ */

.hero {
  position: relative;
  min-height: 100vh;
  background:
    linear-gradient(
      to bottom,
      rgba(11, 13, 16, 0.65),
      rgba(11, 13, 16, 0.9)
    ),
    url("/assets/images/hero-athlete.jpg") center center / cover no-repeat;
  display: flex;
  align-items: center;
}


.hero-overlay {
  display: none;
}

.hero-content {
  max-width: 900px;
  padding: 0 2rem;
}

.hero h1 {
  font-size: clamp(2.8rem, 5vw, 4.5rem);
  font-weight: 800;
  letter-spacing: -0.02em;
  color: var(--white);
  margin-bottom: 1.5rem;
}

.hero-subheadline {
  font-size: 1.25rem;
  color: var(--silver);
  max-width: 700px;
  margin-bottom: 2.5rem;
}

/* ===============================
   BUTTONS
================================ */
.hero-cta {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn {
  display: inline-block;
  padding: 0.9rem 1.8rem;
  font-weight: 700;
  border-radius: 6px;
  text-decoration: none;
  transition: all 0.25s ease;
}

.btn-primary {
  background-color: var(--yellow);
  color: var(--black);
}

.btn-primary:hover {
  background-color: var(--yellow-dark);
  transform: translateY(-2px);
}

.btn-secondary {
  border: 2px solid var(--silver);
  color: var(--silver);
}

.btn-secondary:hover {
  background-color: var(--silver);
  color: var(--black);
}

/* ===============================
   CONVERSION CTA
================================ */
.conversion-cta {
  background: linear-gradient(
    to bottom,
    #0f1217,
    #0b0d10
  );
  padding: 5rem 2rem;
  border-top: 1px solid rgba(255,255,255,0.05);
}

.conversion-cta h2 {
  text-align: center;
  font-size: 2.2rem;
  font-weight: 800;
  color: var(--white);
  margin-bottom: 0.8rem;
}

.cta-subline {
  text-align: center;
  color: var(--muted);
  max-width: 600px;
  margin: 0 auto 3rem;
  font-size: 1.1rem;
}

.cta-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
}

.cta-card {
  background: var(--metal-mid);
  padding: 2.5rem;
  border-radius: 14px;
  text-decoration: none;
  color: var(--silver);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.cta-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 25px 50px rgba(0,0,0,0.45);
}

.cta-card h3 {
  color: var(--white);
  margin: 0.8rem 0;
}

.cta-card p {
  color: var(--muted);
}

.cta-tag {
  display: inline-block;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.5px;
  color: var(--black);
  background: var(--yellow);
  padding: 0.35rem 0.7rem;
  border-radius: 999px;
}


/* ===============================
   SECTIONS
================================ */
section {
  padding: 5rem 2rem;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

h2 {
  font-size: 2.4rem;
  font-weight: 800;
  color: var(--white);
  margin-bottom: 1.5rem;
}

.section-subheadline {
  color: var(--muted);
  max-width: 700px;
  margin-bottom: 3rem;
}

/* ===============================
   WHY SECTION
================================ */
.why-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
}

.why-card {
  background-color: var(--metal-mid);
  padding: 2rem;
  border-radius: 10px;
}

.why-card h3 {
  color: var(--white);
  margin-bottom: 0.8rem;
}

/* ===============================
   SOCIAL PROOF
================================ */
.social-proof {
  background-color: #0f1217;
}

.social-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  text-align: center;
  gap: 2rem;
}

.stat-number {
  font-size: 2.8rem;
  font-weight: 800;
  color: var(--yellow);
}

.stat-label {
  color: var(--muted);
}

/* ===============================
   PROGRAMS
================================ */
.program-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
}

.program-card {
  background-color: var(--metal-mid);
  padding: 2rem;
  border-radius: 12px;
  text-decoration: none;
  color: var(--silver);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.program-card h3 {
  color: var(--white);
  margin-bottom: 0.5rem;
}

.program-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.4);
}

/* ===============================
   PROGRAM LANDING PAGES
================================ */
.program-hero {
  padding: 6rem 2rem;
  background: linear-gradient(
    to bottom,
    rgba(11,13,16,0.85),
    rgba(11,13,16,0.95)
  ),
  url("/assets/images/hero-athlete.jpg") center / cover no-repeat;
}

.program-hero h1 {
  color: var(--white);
  font-size: clamp(2.6rem, 5vw, 4rem);
  font-weight: 800;
  margin-bottom: 1rem;
}

.program-subheadline {
  max-width: 700px;
  font-size: 1.2rem;
  color: var(--silver);
  margin-bottom: 2rem;
}

.program-section {
  padding: 5rem 2rem;
}

.program-section.dark {
  background-color: #0f1217;
}

.program-list {
  list-style: none;
  margin-top: 2rem;
}

.program-list li {
  margin-bottom: 1rem;
  padding-left: 1.2rem;
  position: relative;
}

.program-list li::before {
  content: "â€¢";
  position: absolute;
  left: 0;
  color: var(--yellow);
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.feature-card {
  background: var(--metal-mid);
  padding: 2rem;
  border-radius: 14px;
}

.feature-card h3 {
  color: var(--white);
  margin-bottom: 0.6rem;
}

.program-text {
  max-width: 800px;
  color: var(--muted);
}

.program-cta {
  padding: 5rem 2rem;
  text-align: center;
  background: linear-gradient(
    to bottom,
    #0b0d10,
    #000000
  );
}


/* ===============================
   RESPONSIVE
================================ */
@media (max-width: 768px) {
  .hero {
    min-height: 90vh;
  }

  .hero h1 {
    font-size: 2.4rem;
  }

  .hero-subheadline {
    font-size: 1.1rem;
  }
}
/* ===============================
   CONTACT STRIP
================================ */

.contact-strip {
  background: linear-gradient(
    135deg,
    #2b2f36,
    #3a3f47
  );
  padding: 3.8rem 2rem;
  border-top: 1px solid rgba(255,255,255,0.25);
  border-bottom: 1px solid rgba(0,0,0,0.35);
}

.contact-strip-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
}

.contact-text h3 {
  color: var(--white);
  font-size: 1.6rem;
  margin-bottom: 0.4rem;
}

.contact-text p {
  color: var(--muted);
}

@media (max-width: 768px) {
  .contact-strip-inner {
    flex-direction: column;
    text-align: center;
  }
}

/* ===============================
   FOOTER
================================ */
.site-footer {
  background-color: #0b0d10;
  padding: 4rem 2rem 2rem;
  border-top: 1px solid rgba(255,255,255,0.05);
}

.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  gap: 3rem;
}

.footer-brand h4 {
  color: var(--silver);
  font-size: 1.4rem;
  margin-bottom: 0.8rem;
}

.footer-brand p {
  color: var(--muted);
  max-width: 400px;
}

.footer-links h5 {
  color: var(--white);
  margin-bottom: 1rem;
}

.footer-links ul {
  list-style: none;
}

.footer-links li {
  margin-bottom: 0.6rem;
}

.footer-links a {
  color: var(--muted);
  text-decoration: none;
}

.footer-links a:hover {
  color: var(--yellow);
}

.footer-bottom {
  margin-top: 3rem;
  padding-top: 1.5rem;
  text-align: center;
  border-top: 1px solid rgba(255,255,255,0.05);
}

.footer-bottom p {
  color: var(--muted);
  font-size: 0.9rem;
}

@media (max-width: 768px) {
  .footer-grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .footer-brand p {
    margin: 0 auto;
  }
}

