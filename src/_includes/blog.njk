{% extends "base.njk" %}

{% block content %}
<article class="blog-post">
  <div class="container">

    <header class="blog-header">
      <h1>{{ title }}</h1>

      {% if description %}
        <p class="blog-description">{{ description }}</p>
      {% endif %}
    </header>

    <div class="blog-content">
      {{ content | safe }}
    </div>

  </div>
</article>
{% endblock %}

